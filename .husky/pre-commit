#!/bin/sh

# Husky v9 pre-commit hook
# Runs before each commit to ensure code quality

# Check if we're in the micropdf-rs directory and run cargo fmt check
if git diff --cached --name-only | grep -q "^micropdf-rs/"; then
  echo "üì¶ Checking Rust formatting..."
  cd micropdf-rs && cargo fmt --check 2>/dev/null || {
    echo "‚ùå Rust formatting check failed. Run 'cargo fmt' to fix."
    exit 1
  }
  cd ..
fi

# Check if we're in the micropdf-js directory and run format check
if git diff --cached --name-only | grep -q "^micropdf-js/"; then
  echo "üì¶ Checking Node.js formatting..."
  if [ -f "micropdf-js/package.json" ] && grep -q '"format:check"' micropdf-js/package.json 2>/dev/null; then
    cd micropdf-js && pnpm format:check 2>/dev/null || {
      echo "‚ùå Node.js formatting check failed. Run 'pnpm format' to fix."
      exit 1
    }
    cd ..
  fi
fi

# Check if we're in the go-micropdf directory and run go fmt check
if git diff --cached --name-only | grep -q "^go-micropdf/"; then
  echo "üì¶ Checking Go formatting..."
  cd go-micropdf && test -z "$(gofmt -l .)" 2>/dev/null || {
    echo "‚ùå Go formatting check failed. Run 'gofmt -w .' to fix."
    exit 1
  }
  cd ..
fi

# Check if we're in the micropdf-py directory and run format check
if git diff --cached --name-only | grep -q "^micropdf-py/"; then
  echo "üì¶ Checking Python formatting..."
  if command -v black >/dev/null 2>&1; then
    cd micropdf-py && black --check src/ tests/ 2>/dev/null || {
      echo "‚ùå Python formatting check failed. Run 'black src/ tests/' to fix."
      exit 1
    }
    cd ..
  fi
fi

echo "‚úÖ Pre-commit checks passed"

